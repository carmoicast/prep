<%= form_for @poll, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :paterno, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :paterno, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :materno, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :materno, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telefono, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefono, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :correo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :correo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :domicilio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :domicilio, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estudio, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :estudio, [["Ninguna", "1"], ["Primaria", "2"], ["Segundaria", "3"], ["Prepa", "4"], ["Universidad", "5"],  ["Otro", "6"]  ], :class => 'number_field' %>


    </div>
  </div>
  <div class="control-group">
    <%= f.label :rol, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rol, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :profesion, :class => 'control-label' %>
    <div class="controls"> 
      <%= f.text_field :profesion, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                polls_path, :class => 'btn' %>
  </div>
<% end %>
